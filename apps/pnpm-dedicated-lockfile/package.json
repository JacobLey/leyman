{
  "name": "pnpm-dedicated-lockfile",
  "version": "0.0.4",
  "description": "Write a deterministic lockfile per workspace, based on currently installed dependencies.",
  "engines": {
    "node": ">=24"
  },
  "type": "module",
  "author": "JacobLey",
  "license": "MIT",
