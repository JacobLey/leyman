{
  "name": "nx-update-ts-references",
  "version": "0.0.8",
  "description": "An Nx plugin to update references in tsconfig based on local dependencies",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "author": "JacobLey",
  "license": "MIT",
  "repository": "JacobLey/leyman",
  "homepage": "https://github.com/JacobLey/leyman/tree/main/apps/update-ts-references#readme",
  "bugs": {
    "url": "https://github.com/JacobLey/leyman/issues"
  },
  "keywords": [
    "typescript",
    "references",
    "pnpm",
    "dependencies"
  ],
  "sideEffects": false,
  "executors": "./executors.json",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ci-info": "^4.0.0",
    "comment-json": "^4.2.5",
    "common-proxy": "workspace:^",
    "npm-default-import": "npm:default-import@latest",
    "npm-format-file": "npm:format-file@latest",
    "npm-juniper": "npm:juniper@latest",
    "nx-plugin-handler": "workspace:^"
  },
  "optionalDependencies": {
    "@nx/devkit": "^20.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@leyman/eslint-config": "workspace:^",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.6",
    "chai": "^5.1.2",
    "mocha": "^10.8.2",
    "npm-load-populate-files": "npm:load-populate-files@latest",
    "npm-nx-populate-files": "npm:nx-populate-files@latest",
    "npm-nx-update-ts-references": "npm:nx-update-ts-references@latest",
    "nx-tsc": "workspace:^",
    "typescript": "^5.6.3"
  }
}
