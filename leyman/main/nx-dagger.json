{
  "$schema": "../../apps/nx-dagger/src/generate/schema.json",
  "dagger": {
    "directory": "dagger/monorepo",
    "name": "monorepo"
  },
  "constructorArguments": {
    "nodeVersion": "string",
    "pnpmVersion": "string"
  },
  "runtimes": {
    "node": {
      "preBuild": {
        "name": "node-install",
        "constructorArguments": [
          "nodeVersion",
          "pnpmVersion"
        ],
        "parameters": [
          "source",
          "output",
          "projectDir",
          "projectSource",
          "dependencyProjectDirectories"
        ]
      },
      "postBuild": {
        "name": "node-deploy",
        "constructorArguments": [
          "nodeVersion",
          "pnpmVersion"
        ],
        "parameters": [
          "source",
          "output",
          "projectDir",
          "projectSource",
          "projectOutput",
          "dependencyProjectDirectories",
          "directDependencyProjectDirectories"
        ]
      }
    }
  },
  "targets": {
    "barrelify": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput"
      ]
    },
    "biome": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput"
      ]
    },
    "mocha-c8": {
      "pluginNames": [
        "coverage-report"
      ],
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput",
        "directDependencyProjectDirectories"
      ]
    },
    "eslint": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput",
        "directDependencyProjectDirectories"
      ]
    },
    "populate-files": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput"
      ]
    },
    "tsc": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "transform",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput"
      ]
    },
    "update-ts-references": {
      "pluginNames": [
        "update-ts-references",
        "npm-update-ts-references"
      ],
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "ci",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput",
        "directDependencyProjectDirectories"
      ]
    }
  }
}
