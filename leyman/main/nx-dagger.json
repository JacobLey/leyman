{
  "$schema": "../../apps/nx-dagger/src/generate/schema.json",
  "dagger": {
    "directory": "dagger/monorepo",
    "name": "monorepo"
  },
  "constructorArguments": {
    "nodeVersion": "string",
    "pnpmVersion": "string"
  },
  "runtimes": {
    "node": {
      "preBuild": {
        "name": "node-install",
        "constructorArguments": [
          "nodeVersion",
          "pnpmVersion"
        ],
        "parameters": [
          "source",
          "output",
          "projectDir",
          "projectSource",
          "dependencyProjectDirectories"
        ]
      },
      "postBuild": {
        "name": "node-deploy",
        "constructorArguments": [
          "nodeVersion",
          "pnpmVersion"
        ],
        "parameters": [
          "source",
          "output",
          "projectDir",
          "projectSource",
          "projectOutput",
          "dependencyProjectDirectories"
        ]
      }
    }
  },
  "targets": {
    "tsc": {
      "constructorArguments": [
        "nodeVersion"
      ],
      "kind": "transform",
      "parameters": [
        "source",
        "projectDir",
        "projectOutput",
        "dependencyProjectDirectories"
      ]
    }
  }
}
