{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@leyman/main",
  "targets": {
    "changesets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["changeset"],
        "parallel": true,
        "color": true,
        "cwd": "{projectRoot}"
      }
    },
    "lifecycle": {
      "executor": "nx-lifecycle:lifecycle",
      "options": {
        "stages": {
          "analyze": {
            "hooks": ["format", "lint"],
            "dependsOn": ["^build", "build"]
          },
          "build": { "hooks": ["pre", "run", "post"], "dependsOn": ["^build"] },
          "test": {
            "hooks": ["reset", "run", "report"],
            "dependsOn": ["analyze", "build"]
          }
        },
        "bindings": {
          "eslint": "analyze:lint",
          "biome": "analyze:format",
          "barrelify": "build:pre",
          "update-ts-references": "build:pre",
          "tsc": "build:run",
          "populate-files": "build:post",
          "coverage-reset": "test:reset",
          "mocha-unit-test": "test:run",
          "mocha-integration-test": "test:run",
          "coverage-report": "test:report"
        }
      },
      "dependsOn": ["^build"]
    },
    "analyze:_": {},
    "analyze:format": {},
    "analyze:lint": {},
    "analyze": {},
    "build:_": {},
    "build:pre": {},
    "build:run": {},
    "build:post": {},
    "build": {},
    "test:_": {},
    "test:reset": {},
    "test:run": {},
    "test:report": {},
    "test": {}
  }
}
