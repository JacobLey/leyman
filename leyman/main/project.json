{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@leyman/main",
  "targets": {
    "lifecycle": {
      "executor": "nx-lifecycle:lifecycle",
      "options": {
        "stages": {
          "analyze": {
            "hooks": [
              "lint",
              "format"
            ],
            "dependsOn": [
              "^build"
            ]
          },
          "build": {
            "hooks": [
              "pre",
              "run",
              "post"
            ],
            "dependsOn": [
              "^build"
            ]
          },
          "test": {
            "hooks": [
              "run",
              "report"
            ],
            "dependsOn": [
              "analyze",
              "build"
            ]
          }
        },
        "targets": {
          "eslint": "analyze:lint",
          "biome": "analyze:format",
          "update-ts-references": "build:pre",
          "tsc": "build:run",
          "populate-files": "build:post",
          "mocha-unit-test": "test:run",
          "coverage-report": "test:report"
        }
      }
    },
    "analyze:_": {},
    "analyze:lint": {},
    "analyze:format": {},
    "analyze": {},
    "build:_": {},
    "build:pre": {},
    "build:run": {},
    "build:post": {},
    "build": {},
    "test:_": {},
    "test:run": {},
    "test:report": {},
    "test": {}
  }
}